<p id="notice"></p>

<h1>コーチの討論時間一覧</h1>



<br>
<% if coach_signed_in? %>
  <%= link_to '討論予定時間をいれる', new_board_path %>/
<% end %>
<% if user_signed_in? %>
  <%= link_to '参加したい時間をコメントする', new_board_path %>/
<% end %>
<%= link_to 'トップへ戻る', root_path %>

<%= month_calendar events: @boards do |date, board| %>
  <%= date.day %>

  <% board.each do |board| %>
    <div>
    <% if board.coach_id.present? %>
      ○<%= board.name %><br>
      <%= link_to board.title, board_path(board) %><br>
      <%= link_to board.start_time.strftime('%H:%M'), board_path(board) %><%= "〜" %>
    <% else %>
      ↪︎<%= board.name %>
      <% end %>
    </div>
  <% end %>
<% end %>