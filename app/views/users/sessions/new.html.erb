<% content_for :css do %>
  <%= stylesheet_link_tag 'user' %>
<% end %>

<div class="login inner">
  <h2 class="active"><span>User Login</span></h2>

  <p><span>※</span>は入力必須項目です</p>

<%= form_with model: @user, url: user_session_path, class: "form-group", local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>


  <div class="field">
    <span class="one"><%= f.label :お名前, class: "item" %><span>※</span></span><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form" %>
  </div>

  <div class="field">
    <span class="one"><%= f.label :メールアドレス, class: "item" %><span>※</span></span><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
  </div>

  <div class="field">
    <span class="one"><%= f.label :'パスワード(6文字以内)', class: "item" %><span>※</span></span>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form" %>
  </div>

  <div class="field">
    <span class="one"><%= f.label :パスワード（確認用）, class: "item" %><span>※</span></span><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
  </div>

  <div class="field">
    <span class="one"><%= f.label :好きな種目, class: "item" %><span>※</span></span><br />
    <%= f.text_field :style, autofocus: true, autocomplete: "style", class: "form" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: "action" %>
  </div>
<% end %>

<div class="links">
  <%= link_to '新規コーチ登録/', new_coach_registration_path, class: "link1" %>
  <%= link_to '新規ユーザー登録/', new_user_registration_path, class: "link2" %>
  <%= link_to 'コーチログイン', new_coach_session_path, class: "link3" %>
</div>


<%#= render "users/shared/links" %>

</div>