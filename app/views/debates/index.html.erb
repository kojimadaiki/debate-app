<% content_for :css do %>
  <%= stylesheet_link_tag 'debate-index' %>
<% end %>

  <div class="header inner">
    <div class="header-left">
      <img src="/images/logo.png", class="image">
    </div>
    <div class="header-right">
      <% if user_signed_in? || coach_signed_in? %>
        <%= link_to '掲示板を見る', boards_path, class: "board" %>
      <% end %>
      <p class="member">会員サイト</p>
      <p class="question">よくある質問</p>
    </div>
  </div>
  <div class="main inner">
    <div class="top">
      <div class="sign_in">
      <% unless coach_signed_in? %>
      <% unless user_signed_in? %>
        <%= link_to 'user新規登録する', new_user_registration_path %>/
        <%= link_to 'userログインする', new_user_session_path %>
      <% else %>
        <%= link_to 'userログアウトする', destroy_user_session_path, method: :delete, class: "logout" %>
      <% end %>
      <% end %>
      </div>
      <div class="log_in">
      <% unless user_signed_in? %>
      <% unless coach_signed_in? %>
        <%= link_to 'coach新規登録する', new_coach_registration_path %>/
        <%= link_to 'coachログインする', new_coach_session_path %>
      <% else %>
        <%= link_to 'coachログアウトする', destroy_coach_session_path, method: :delete, class: "logout" %>/
        <%= link_to '掲示板を見る', boards_path %><br>
      <% end %>
      <% end %>
      <% if coach_signed_in? %>
        <%= link_to 'チャットルームを作成する', new_debate_path %>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to '掲示板を見る', boards_path %>
      <% end %>
      </div>
    </div>
  </div>
  <% if user_signed_in? || coach_signed_in? %>
  <% Debate.all.each do |debate| %>
    <%= link_to debate.name, debate_comments_path(debate) %><br>
  <% end %>
  <% end %>
  <div class="content inner">
    <div class="question">
      <h2>よくある質問</h2>
    </div>
  </div>
  <div class="footer inner">
   <p>©︎</p>
  </div>
